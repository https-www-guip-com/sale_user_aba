<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="creacion_usuarios_aba_creacion_tree_view" model="ir.ui.view">
            <field name="name">creacion_usuarios_aba.tree.view</field>
            <field name="model">creacion_usuarios_aba</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name_agente_atlantida" />
                    <field name="codigo" />
                    <field name="terminal" />
                    <field name="tipo_chip_selec" />
                    <field name="tipo_terminal" />
                    <field name="city" />
                    <field name="state_id" />
                    <field name="country_id" />
                </tree>
            </field>
        </record>

        <record id="creacion_usuarios_aba_user_creacion_form_view" model="ir.ui.view">
            <field name="name">creacion_usuarios_aba.form.view</field>
            <field name="model">creacion_usuarios_aba</field>
            <field name="arch" type="xml">
                <form string="Info usuarios">
                    <group colspan="4" col="4">
                        <field name="name_agente_atlantida" />
                        <field name="codigo" />
                        <field name="terminal" />
                        <field name="tipo_chip_selec" />
                        <field name="tipo_terminal" />
                    </group>
                    <group colspan="4" col="4">
                        <field name="city" />
                        <field name="state_id" />
                        <field name="country_id" />
                    </group>

                     <group colspan="4" col="4">
                        <field name="name_contacto" />
                        <field name="phone" />
                        <field name="rtn" />
                        <field name="usuario" />
                        <field name="recibe_gestion" />
                        <field name="token" />
                    </group>

                    <group>
                         <field name="comentarios" />
                    </group>
                </form>
            </field>
        </record>

    </data>
</odoo>